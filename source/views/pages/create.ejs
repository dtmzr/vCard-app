<!-- views/pages/create.ejs -->

<% layout('../layouts/base') -%>

<div class="container">
    <div class="row">
        <div class="col">
            <h1>Create your vCard</h1>
            <a href="/">Back to the list</a>

            <form class="mt-5" method="POST">
                <div class="form-group">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="firstname">Firstname</label>
                            <input type="text" class="form-control" name="firstname" id="firstname" placeholder="Max">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="lastname">Lastname</label>
                            <input type="text" class="form-control" name="lastname" id="lastname" placeholder="Redfield">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" name="email" id="email" placeholder="Email">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="phone">Phone</label>
                            <input type="tel" class="form-control" name="phone" id="phone" placeholder="+1-202-555-0184">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-10">
                            <label for="street">Street</label>
                            <input type="text" class="form-control" name="street" id="street" placeholder="Jenna Lane">
                        </div>
                        <div class="form-group col-md-2">
                            <label for="street-no">Street no.</label>
                            <input type="text" class="form-control" name="street_no" id="street-no" placeholder="464">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-10">
                            <label for="city">City</label>
                            <input type="text" class="form-control" name="city" id="city" placeholder="Urbandale">
                        </div>
                        <div class="form-group col-md-2">
                            <label for="zip">Zipcode</label>
                            <input type="text" class="form-control" name="zip" id="zip" placeholder="50322">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="website">Website</label>
                        <input type="text" class="form-control" name="website" id="website" placeholder="https://random.com">
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="company">Company</label>
                            <input type="text" class="form-control" name="company" id="company" placeholder="Random Company">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="job">Job</label>
                            <input type="text" class="form-control" name="job" id="job" placeholder="Designer">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>